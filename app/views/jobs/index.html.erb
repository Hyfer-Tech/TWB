<div class="col-xs-8">
	<h1>Jobs <span class="subtitle"><%= link_to '(Post a new job)', new_shipment_path %></span></h1>

	<div class="panel">
		<div class="panel-body" style="position: relative;">
			<% @jobs.each do |job| %>
				<h2><%= job.job_title %></h2>
				<h5><%= number_to_currency job.price %></h5>
				
				<ul class="no-bullet">
					<li><strong>Borders Expected To Cross</strong>: <%= job.border_expected_to_cross %></li>
					<li><strong>Date Of Shipment</strong>: <%= job.date_of_shipment %></li>
					<li><strong>Location of Shipment</strong>: <%= job.location_of_shipment %></li>
					<li><strong>Place Being Shipped To</strong>: <%= job.place_being_shipped_to %></li>
				</ul>
			  
				<% job.tag_list.each do |tag| %>
		    	<span class="label label-default"><%= link_to tag, job_tag_path(tag) %></span>
		    <% end %>

		    <% unless current_user == job.client %>
		    	<%= link_to "Apply", new_job_bid_path(job.id), class: 'btn btn-lg btn-success btn-right' %>
		    <% end %>
		  <% end %>

		  <% if @jobs.empty? %>
		  	<h3>There are currently no jobs.</h3>
		  <% end %>
		</div>
	</div>
</div>
  
<div class="col-xs-4">
	<h1>Suggestions</h1>
	<% @user_suggestions.each do |user| %>
		<div class="panel">
			<div class="panel-body">
				<div class="col-xs-12 text-center">
					<%= image_tag user.avatar, class: 'prof-pic' %>
				</div>
				<div class="col-xs-12 text-center">
					<span>
						<%= link_to "#{user.first_name} #{user.last_name}", business_user_path(user) %>
					</span>
				</div>
			</div>
		</div>
	<% end %>

	<% if @user_suggestions.empty? %>
		<div class="panel">
			<div class="panel-body">
				<h3>There are no suggestions right now.</h3>
			</div>
		</div>
	<% end %>
</div>
