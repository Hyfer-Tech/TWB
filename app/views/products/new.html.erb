<%= simple_form_for @product do |f| %>
	<%= f.input :title %>	
	<%= f.input :taxable, as: :boolean %>
	<%= f.input :featured_image %>
	<%= f.input :available, as: :boolean %>
	<%= f.input :price %>
	<%= f.input :grams %>
	<%= f.input :compare_at_price %>
	<%= f.input :product_code, label: "Product ID" %>
	<%= f.button :submit %>
<% end %>