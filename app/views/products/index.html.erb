<section class="ml-60">
    <div class="container-fluid">
      <div class="row">
            <!-- Sidebar -->
            <div class="col-xs-12 col-md-3">
                <%= render 'layouts/sidebar' %>
            </div>

       		  <div class="col-xs-12 col-md-8 col-md-offset-1 color-white dashboard-content rendered-content">
    						<h1>Your Products<%= link_to 'Add a Product', new_product_path, class: ' pull-right btn btn-sm btn-success' %></h1>

    						<hr>
    						<% if @products.present? %>
    							<div class="row">
                      <% @products.each do |product| %>
                      <div class="col-xs-12 col-md-4">
    										<div class="product-container">
                          <h5><%= product.created_at.strftime("%m/%d/%Y %l:%M %p") %></h5>
    											<div class="row">
                            <div class="col-xs-12 col-md-3">
                              <% if product.featured_image.present? %>
                                <%= image_tag product.featured_image.url, class: 'img-responsive' %>
                              <% end %>
                              <h4 class="text-center"><%= product.title %></h4>
                              <%= link_to 'Update', edit_product_path(product) %>
                            </div>
                          </div>
                        </div>
                      </div>
                      <% end %>
                  </div>
                <% else %>
    							<h5> You do not have any products.</h5>
    						<% end %>
    				</div>
        </div>
		</div>
</section>
