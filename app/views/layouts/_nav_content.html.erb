<div class="container">
    <h1 class="logo">
        <%= link_to 'Trade Without Borders', root_path, class: 'brand' %>

    </h1><!--//logo-->
    <nav class="main-nav navbar-right" role="navigation">
        <div class="navbar-header">
            <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button><!--//nav-toggle-->
        </div><!--//navbar-header-->
        <div id="navbar-collapse" class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
              <% if current_user.present? %>
                <li>
                  <%= link_to '<i class="fa fa-plus-circle" aria-hidden="true"></i>'.html_safe, '#' %>
                </li>
                <li>
                  <%= link_to '<i class="fa fa-envelope" aria-hidden="true"></i>'.html_safe, '#' %>
                </li>
                <li>
                  <%= link_to '<i class="fa fa-bell" aria-hidden="true"></i>'.html_safe, '#' %>
                </li>
                <li role="presentation" class="dropdown">
                  <a class="dropdown-toggle nav-dropdown" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                    <%= image_tag current_user.avatar, class: 'prof-pic-xs nav-prof' %> <span class="caret"></span>
                  </a>
                  <li><%= link_to 'Your Conversations', conversations_path %></li>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Profile", profile_users_path %></li>

                    <li><%= link_to 'Log Out', current_user.decorate.destroy_session_path, method: :delete %></li>
                  </ul>
                </li>

              <% else %>

                <li class="nav-item">
                  <a href="#" class="login-trigger" data-toggle="modal" data-target="#login-modal">Log in</a>
                </li>
                <li class="nav-item nav-item-cta last">
                  <a class="btn-signup" href="#" data-toggle="modal" data-target="#signup-modal">Sign Up</a>
                </li>
              <% end %>
            </ul><!--//nav-->
        </div><!--//navabr-collapse-->
    </nav><!--//main-nav-->
</div><!--//container-->

<%= render 'layouts/signup_modal' %>
<%= render 'layouts/login_modal' %>
