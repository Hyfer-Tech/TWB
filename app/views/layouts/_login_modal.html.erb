                                </div>
                            </div><!--//extra-->
                        </div><!--//form-group-->
                        <%= f.button :submit, "Log in", class: 'btn btn-cta btn-block btn-primary' %>
                    <% end %>
                  </div><!--//login-form-container-->

                  <div class="option-container">
                    <div class="lead-text">Don't have an account?</div>
