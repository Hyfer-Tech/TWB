                    <%= link_to 'Sign Up', new_forward_freight_registration_path, class: 'signup-link btn btn-ghost-alt', id: 'signup-link' %>
                  </div><!--//option-container-->
                </div><!-- tabpanel -->

              </div><!-- tab-content -->

            </div><!--//modal-body-->
        </div><!--//modal-content-->
    </div><!--//modal-dialog-->
</div><!--//modal-->
