<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, required: true, autofocus: true %>
    <%= f.input :last_name, required: true %>
    <%= f.input :email, required: true %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>
    <%= f.input :phone, required: true %>
    <%= f.input :description %>
    <%= f.input :address_line_1, required: true %>
    <%= f.input :address_line_2 %>
    <%= f.input :address_line_3 %>
    <%= f.input :city, required: true %>

    <%= f.input :state_province_county, label: "State/Province/County", required: true %>
    <%= f.input :zip_postal_code, label: "Zip/Postal Code", input_html: { class: 'zipcode'}, required: true%>
    <%= f.input :service_rates, label: "Service rate" %>

    <%= f.file_field :avatar %>
    <%= f.input :country, as: :country, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "forward_freights/shared/links" %>

<script type="text/javascript">
  $( "#forward_freight_zip_postal_code" ).keydown(function( event ) {
    var elem = document.getElementById("forward_freight_zip_postal_code").value;
    if(!(isNaN(elem[0]))){
      $('#forward_freight_zip_postal_code').mask('AAAAA');
    } else {
      $('#forward_freight_zip_postal_code').mask('AAA AAA');
    }
});
</script>