<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
   <%= f.input :first_name, required: true, autofocus: true %>
   <%= f.input :last_name, required: true %>
   <%= f.input :email, required: true %>
   <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
   <%= f.input :password_confirmation, required: true %>
   <%= f.input :phone, required: true %>
   <%= f.input :description %>
   <%= f.input :address_line_1, required: true %>
   <%= f.input :address_line_2 %>
   <%= f.input :address_line_3 %>
   <%= f.input :city, required: true %>

   <%= f.input :state_province_county, label: "State/Province/County", required: true %>
   <%= f.input :country, as: :country, required: true %>
   <%= f.simple_fields_for :tag do |p| %>
    <%= p.input :tag, collection: TagsList::TAG_TYPES.map{|k,v| [k,v]},label: false, include_blank: false %>
   <% end %>
 </div>


  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "business_users/shared/links" %>
