<div class="row">
  <div class="col-xs-12 col-md-10">

    <div class="row profile">
      <div class="col-xs-12 col-md-4">
        <%= render partial: 'users/sidebar' %>
      </div>
      <div class="col-md-8 col-xs-12">
        <div class="profile-details-container">
          <%= render 'shared/flash_messages' %>
          <%= react_component 'EditTags', { tag_list: @user.tag_list, all_tags: ActsAsTaggableOn::Tag.all.map(&:name), user_type_name: @user.user_type_name } %>
          <%= react_component 'Main', {
            description: @user.description,
            email: @user.email,
            phone: @user.phone,
            country: @user.country,
            state_province_county: @user.state_province_county,
            city: @user.city,
            user_type_name: @user.user_type_name,
            countries_list: @user.countries,
            show_email: @user.show_email,
            show_phone_number: @user.show_phone_number
          } %>
        </div>
      </div><!-- column -->
    </div><!-- row-profile -->
  </div>
</div>

