<section class="ml-60">
    <div class="container-fluid">
      <div class="row">
            <!-- Sidebar -->
            <div class="col-xs-12 col-md-3">
                <%= render 'layouts/sidebar' %>
            </div>

       		  <div class="col-xs-12 col-md-8 col-md-offset-1 color-white dashboard-content rendered-content">
    						<h1><%= @job.job_title %></h1>

    						<hr>
                <%= simple_form_for @bid, url: job_bids_path, method: :post do |f| %>
                <div class="row" %>
                  <div class="col-xs-12 col-md-12" %>
                    <%= f.input :cover_letter, as: :text %>
                  </div>
                </div>

                <div class="row" %>
                  <div class="col-xs-12 col-md-6" %>
                      <%= f.input :price %>
                  </div>

                  <div class="col-xs-12 col-md-6" %>
                      <%= f.button :submit, 'Bid', class: 'pull-right' %>
                  </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</section>
